<% layout('layouts/boilerplate')%>
<h1 class="text-center"> Edit Artwork Information</h1>
<div class="col-6 offset-3">
    <form action="/artpieces/<%=artpiece._id%>?_method=PUT" method="POST" class="validated-form" enctype="multipart/form-data">
        <div class="mb-3">
            <label class="form-label" for="title">Title</label>
            <input class="form-control" type="text" id="title" name="artpiece[title]" value="<%=artpiece.title%>" required>
        </div>

        <div class="mb-3">
            <label class="form-label" for="artist">Artist</label>
            <input class="form-control" type="text" id="artist" name="artpiece[artist]" value="<%=artpiece.artist%>" required>
        </div>

        <!-- <div class="mb-3">
            <label class="form-label" for="collectionName">Collection</label>
            <input class="form-control" type="text" id="collectionName" name="artpiece[collectionName]" value="<%=artpiece.collectionName%>" required>
        </div> -->


        <div class="mb-3">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-control" type="text" id="description" name="artpiece[description]"><%=artpiece.description %></textarea>
        </div>

        <div class="mb-3">
            <div class="form-file custom-file">
                <label for="image" class="form-label">
                    <span class="form-file-text custom-file-label">Replace Images</span>
                </label>
                <input class="form-control" type="file" id="image" name="image" multiple>
            </div>
        </div>

        <div class="mb-3">
            <% artpiece.images.forEach(function(img, i) { %>
            <img src="<%=img.thumbnail%>" class="img-thumbnail"  alt="">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                <label class="form-check-label" for="image-<%=i%>">Delete</label>
            </div>
            <% }) %>
        </div>

        <div class="mb-3">
            <button class="btn btn-info"> Update </button>
        </div>
       
    </form>
    <a href="/artpieces/<%= artpiece._id%>">Back To Artpiece</a>
</div>